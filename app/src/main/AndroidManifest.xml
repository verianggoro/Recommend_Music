<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pembelajar.musicrecommendation">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".RekomendasiApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_lm"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_lm_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.MusicRecommendation">
        <activity android:name=".view.PlayerActivity"></activity>
        <activity
            android:name=".view.SplashScreen"
            android:noHistory="true"
            android:configChanges="uiMode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MainActivity"></activity>
    </application>

</manifest>